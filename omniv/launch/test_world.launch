<?xml version="1.0"?>
<launch>
  <arg name="gui" default="true"/>
  <param name="/use_sim_time" value="true"/>
  
  <!-- PID gains for wheel control
  <rosparam command="load" ns="gazebo_ros_control/pid_gains">
    front_right_wheel: {p: 10.0, i: 0.1, d: 0.5}
    front_left_wheel: {p: 10.0, i: 0.1, d: 0.5}
    rear_left_wheel: {p: 10.0, i: 0.1, d: 0.5}
    rear_right_wheel: {p: 10.0, i: 0.1, d: 0.5}
    left_steering_hinge_wheel: {p: 50.0, i: 0.1, d: 1.0}
    right_steering_hinge_wheel: {p: 50.0, i: 0.1, d: 1.0}
  </rosparam> -->
  <!-- Launch Gazebo with world3 -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find omniv)/map/world3"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>
  
  <!-- Spawn LIMO robot -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find omniv)/urdf/limo_ackerman.xacro'" />
  
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model limo_ackerman -param robot_description -x 0 -y 0 -z 0.2" output="screen" launch-prefix="bash -c 'sleep 3; $0 $@'" />
  
  <!-- Publish TF transforms -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>
  
  <!-- Static transform for map to odom -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="0 0 0 0 0 0 map odom"/>
  
  <!-- Static transform for odom to base_footprint (DISABLED - diff_drive plugin publishes this) -->
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="odom_to_base_footprint" args="0 0 0 0 0 0 odom base_footprint"/> -->

  <!-- Robot controller (DISABLED - conflicts with diff_drive plugin) -->
  <!-- <node pkg="omniv" type="robot_controller.py" name="robot_controller" output="screen"/> -->

  <!-- Mapping node -->
  <node pkg="omniv" type="mapping_node.py" name="mapping_node" output="screen"/>
  
  <!-- RViz -->
  <!-- <node pkg="rviz" type="rviz" name="rviz"/> -->
</launch>