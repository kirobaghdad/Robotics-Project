<?xml version="1.0"?>
<launch>

    <arg name="robot_namespace" default=""/>
    <arg name="world_name" default="$(find omniv)/map/world3"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Controllers disabled - using diff_drive plugin instead -->
    <rosparam file="$(find omniv)/config/limo_ackerman_control.yaml" command="load"/>
    <node name="controller_spawner" pkg="controller_manager" type="spawner" 
          respawn="false" output="screen" args="limo_state_controller  
                                limo_fl_steering_hinge_controller limo_fr_steering_hinge_controller"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    
    <param name="robot_description" command="$(find xacro)/xacro '$(find omniv)/urdf/limo_ackerman.xacro'" />

    <!-- initial pose -->
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.2"/>
    <arg name="yaw" default="0.0"/>

    <node name="spawn_limo_model" pkg="gazebo_ros" type="spawn_model" 
          args="-x $(arg x)
                -y $(arg y)
                -z $(arg z)
                -Y $(arg yaw)
                -unpause
                -urdf
                -param robot_description
                -model limo_ackerman" 
          output="screen"
          launch-prefix="bash -c 'sleep 1; $0 $@'" />

      <!-- Static transform for odom to base_footprint (temporary fix) -->
      <node pkg="tf2_ros" type="static_transform_publisher" name="odom_to_base_footprint" args="0 0 0 0 0 0 odom base_footprint"/>
      
    <!-- Robot controller -->
    <node pkg="omniv" type="robot_controller.py" name="robot_controller" output="screen"/>

    <!-- Mapping node -->
    <node pkg="omniv" type="mapping_node.py" name="mapping_node" output="screen"/>
    

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find omniv)/rviz/model_display.rviz" />
</launch>
